MICRONUCLEUS_FIRMWARE_DIR = ../extern/micronucleus/firmware
CONFIG = ""
#CONFIGPATH = ../bootloader_config
PROGRAMMER = "-c stk500v1 -P /dev/ttyACM0 -b 19200 -F"
DEVICE = atmega328p
ISP_ADAPTER_PATH = /dev/ttyACM0

all:
#	$(MAKE) -C $(MICRONUCLEUS_FIRMWARE_DIR) PROGRAMMER=$(PROGRAMMER) DEVICE=$(DEVICE) CONFIG=$(CONFIG) CONFIGPATH=$(CURDIR)
	$(MAKE) -C $(MICRONUCLEUS_FIRMWARE_DIR) PROGRAMMER=$(PROGRAMMER) DEVICE=$(DEVICE) CONFIGPATH=$(CURDIR)

flash:
#	$(MAKE) -C $(MICRONUCLEUS_FIRMWARE_DIR) PROGRAMMER=$(PROGRAMMER) DEVICE=$(DEVICE) CONFIG=$(CONFIG) CONFIGPATH=$(CURDIR) flash
	$(MAKE) -C $(MICRONUCLEUS_FIRMWARE_DIR) PROGRAMMER=$(PROGRAMMER) DEVICE=$(DEVICE) CONFIGPATH=$(CURDIR) flash

fuse:
#	$(MAKE) -C $(MICRONUCLEUS_FIRMWARE_DIR) PROGRAMMER=$(PROGRAMMER) DEVICE=$(DEVICE) CONFIG=$(CONFIG) CONFIGPATH=$(CURDIR) fuse
	$(MAKE) -C $(MICRONUCLEUS_FIRMWARE_DIR) PROGRAMMER=$(PROGRAMMER) DEVICE=$(DEVICE) CONFIGPATH=$(CURDIR) fuse

clean:
	$(MAKE) -C $(MICRONUCLEUS_FIRMWARE_DIR) clean
